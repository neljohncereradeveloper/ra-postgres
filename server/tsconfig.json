{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@application/use-cases/*": ["src/application/use-cases/*"],
      "@application/commands/*": ["src/application/commands/*"],
      "@domain/constants/*": ["src/domain/constants/*"],
      "@domain/models/*": ["src/domain/models/*"],
      "@domain/enums/*": ["src/domain/enums/*"],
      "@domain/policies/*": ["src/domain/policies/*"],
      "@domain/ports/*": ["src/domain/ports/*"],
      "@domain/utils/*": ["src/domain/utils/*"],
      "@domain/interfaces/*": ["src/domain/interfaces/*"],
      "@domains/repositories/*": ["src/domain/repositories/*"],
      "@domains/services/*": ["src/domain/services/*"],
      "@domains/exceptions/*": ["src/domain/exceptions/*"],
      "@infrastructure/filters/*": ["src/infrastructure/filters/*"],
      "@infrastructure/logger/*": ["src/infrastructure/logger/*"],
      "@infrastructure/middlewares/*": ["src/infrastructure/middlewares/*"],
      "@infrastructure/modules/*": ["src/infrastructure/modules/*"],
      "@infrastructure/database/typeorm-mysql/*": [
        "src/infrastructure/database/typeorm/mysql/*"
      ],
      "@shared/constants/*": ["src/shared/constants/*"],
      "@shared/interfaces/*": ["src/shared/interfaces/*"],
      "@shared/utils/*": ["src/shared/utils/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
